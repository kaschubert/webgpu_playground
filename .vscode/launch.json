    "version": "0.2.0",
    "configurations": [
        {
            "env": {
                "RUST_BACKTRACE": "1",
                "CASE_INSENSITIVE": "0"
            },
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'webgpu_tut'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=webgpu_tut",
                    "--package=webgpu_tut"
                ],
                "filter": {
                    "name": "webgpu_tut",
                    "kind": "bin"
                }
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'webgpu_tut'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=webgpu_tut",
                    "--package=webgpu_tut"
                ],
                "filter": {
                    "name": "webgpu_tut",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}